{
  "name": "web-server",
  "version": "1.0.0",
  "scripts": {
    "start": "node dist/server.js",
    "start:dev": "node --inspect=5858 -r ts-node/register server.ts",
    "start:watch": "nodemon",
    "client": "cd client && npm start",
    "dev": "concurrently --kill-others-on-fail \"npm run start:watch\" \"npm run client\"",
    "test": "jest && cd client && npm test",
    "build": "tsc",
    "build:prod": "tsc && cd client && npm run build && npm run copy-built"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "express": "^4.17.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.2",
    "@types/jest": "^24.9.1",
    "@types/node": "^12.12.25",
    "@types/supertest": "^2.0.8",
    "concurrently": "^5.0.2",
    "jest": "^25.1.0",
    "node-sass": "^4.13.1",
    "supertest": "^4.0.2",
    "ts-jest": "^25.0.0",
    "ts-node": "^8.6.2",
    "typescript": "^3.7.5"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "**/node_modules",
      "client"
    ],
    "watch": [
      "./"
    ],
    "exec": "npm run start:dev",
    "ext": "ts"
  }
}
